section[label='vzorovy-projekt']
	img
		width 100%

paper-tabs#tabs
  width 100%
  margin-top 60px
  height 100px

#logo
	margin 60px 0px
	
paper-item::shadow 
	.button-content
		justify-content: center
	paper-ripple
		color lightBlue

paper-button::shadow
	paper-ripple
		color white

#drawer
	background white
	
paper-item.core-selected
	background-color lightBlue
	
paper-item
	border-radius 24px
	
core-menu
	margin 25px
	
core-animated-pages
	overflow hidden
	height 100%
	background-color darkBlue 
	#wrapper
		color white
		padding 80px
		font-size 18px
		line-height 28px


#steps p
		margin-top 40px
		text-align center
		padding 20px
		font-size 24px
		line-height 36px

.custom /deep/ ::-webkit-input-placeholder
  color lightBlue

.custom /deep/ ::-moz-placeholder
  color lightBlue

.custom /deep/ :-ms-input-placeholder
  color lightBlue

.custom /deep/ .label-text,
.custom /deep/ .error
  color lightBlue

.custom /deep/ .unfocused-underline
  background-color lightBlue

.custom[focused] /deep/ .floated-label .label-text
  color lightBlue

.custom /deep/ .focused-underline
  background-color lightBlue

.custom.invalid /deep/ .floated-label .label-text,
.custom /deep/ .error
  color lightBlue

.custom.invalid /deep/ .focused-underline
  background-color lightBlue
