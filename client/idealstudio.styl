lightBlue = #8DD8F8
darkBlue = #003664

html,body
  height 100%
  margin 0
  background-color darkBlue
  font-family 'RobotoDraft', sans-serif


#preco-idealstudio, #vzorovy-projekt, #nasa-praca
	position: relative
	margin-bottom 0
	width 100%
	height 100%
	font-size 30px
	.slick-list
		height 100%
		.slick-track
			height 100%
	img
		width 100%
	.slick-prev
		left 40px
		height auto
		width auto
	.slick-next
		right 40px
		height auto
		width auto
	.slick-dots
		bottom 0px
	.slick-dots li button:before
		font-size 10px
		color black
		opacity .5
	.slick-dots li.slick-active button:before
		color white
		opacity 1
	.slick-prev:before, .slick-next:before
		font-size 36px

#preco-idealstudio
	height 50%

#vzorovy-projekt
	height 100%
	.slick-dots li.slick-active button:before
		color lightBlue
		opacity 1
	.slick-prev:before, .slick-next:before
		color lightBlue
		
#send
	width 200px
	border-radius 24px
	background lightBlue
	color darkBlue
	margin-top 20px

#address
	font-size 18px
	padding 90px
	line-height 28px
	color white
	text-align center

#contact-form
	padding-top 90px
	color white  

.bgImage
	background-position center
	background-size cover
	width 100%

paper-tab
	cursor pointer

paper-icon-button
	color white
	z-index 1
	margin 15px

core-header-panel
  height 100%
  overflow auto
  -webkit-overflow-scrolling touch

core-toolbar
  background #03a9f4
  color white
  
paper-tabs::shadow #selectionBar
  background-color lightBlue

paper-tabs paper-tab::shadow #ink
  color lightBlue
  
