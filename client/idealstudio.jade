	title IDEAL studio

body
	+app
	+facebookSDK

template(name="app")
	paper-toast#toast(text="{{toast}}")
	core-drawer-panel(drawerWidth="300px", responsiveWidth="900px")
		core-header-panel#drawer(drawer)
			div(layout horizontal center center-justified)
				img#logo(src="png/logo.png", alt="Logo")
			core-menu(selected="0")
				paper-item.menuItem(label='preco-idealstudio') Prečo IDEALstudio?
				paper-item.menuItem(label='nasa-praca')  Naša práca
				paper-item.menuItem(label='vzorovy-projekt')  Vzorový projekt
				paper-item.menuItem(label='mam-zaujem')  Mám záujem, čo dalej?
				paper-item.menuItem(label='kontakt') Kontakt
			div(horizontal layout center-justified)
				.fb-share-button(data-href='https://www.facebook.com/kupelnovestudio', data-layout='box_count')
		core-header-panel(main)
			paper-icon-button#menu-button(icon='menu' core-drawer-toggle)
			core-animated-pages#pages(transitions='slide-from-bottom', selected='0', valueattr='label', fit)
				section(label='preco-idealstudio')
					+precoIdealstudio
				section(label='nasa-praca')
					+nasaPraca
				section(label='vzorovy-projekt')
					+vzorovyProjekt
				section(label='mam-zaujem')
					+mamZaujem
				section(label='kontakt')
					+kontakt

