template(name='mamZaujem')
	div#wrapper(fit)
		h1 Mám záujem, čo dalej?
		paper-tabs#tabs(selected='0')
			paper-tab 1
			paper-tab 2
			paper-tab 3
			paper-tab 4
			paper-tab 5
			paper-tab 6
			paper-tab 7
			paper-tab 8
			paper-tab 9
		core-animated-pages#steps(transitions='slide-from-right', selected='0', valueattr='label')
			section(label='0')
				p Pošlem mailom alebo prinesiem osobne pôdorys (nákres) a fotky priestoru spolu s požiadavkami na vypracovanie.
			section(label='1')
				p Do 48 hodín dostanem na mail cenu na projekt a termín obhliadky na potvrdenie.
			section(label='2')
				p Na obhliadke si s dizajnérom prekonzultujem moju presdtavu o dizajne a výšku rozpočtu.
			section(label='3')
				p Po zaplatení 50% z ceny na projekt mi dizajnér vypracuje dispozíciu a 3D vizualizáciu, ktorú si spripomienkujeme na osobnom stretnutí.
			section(label='4')
				p Do vopred dohodnutého termínu dostanem vypracovaný projekt a cenovú ponuku na zariadenie kúpeľne a doplatím zvyšných 50% za projekt.
			section(label='5')
				p Ak s cenovou ponukou na zariadenie súhlasím, potvrdím objednávku.
			section(label='6')
				p Mailom alebo osobne obdržím zálohovú faktúru a po jej zaplatení objednajú moje zariadenie.
			section(label='7')
				p Po zalatení konečnej faktúry mi IDEAL studio dodá zariadenie a ak mám záujem zabezpečia mi autorský dozor počas celej realizácie.
			section(label='8')
				p Naplno si užívate svoju ideálnu kúpeľňu.

template(name='kontakt')
	div(fit layout vertical)
		#map
			google-map(latitude='48.323383', longitude='18.097540', zoom='13', fitToMarkers, style="width:100%;height:300px;")
				google-map-marker(latitude='48.323383', longitude='18.097106', draggable='true', title='IDEALstudio')
		div(horizontal layout)
			div#address(flex)
				div IDEAL Studio, s.r.o. 
				div Dolnozoborská 14, 94901 Nitra
				div 0948 11 90 10
				div info@idealstudio.eu
				br
				div Pondelok: 10:00 - 16:00
				div Utorok: 12:00 - 18:00
				div Streda: 12:00 - 18:00
				div Štvrtok: 12:00 - 18:00
				div Piatok: 10:00 - 18:00
				div Sobota: 10:00 - 12:00
			div#contact-form(flex)
				paper-input-decorator.custom.fullname(label='Meno a priezvisko', floatinglabel)
					input#fullname(is='core-input')
				paper-input-decorator.custom.email(label='Email', floatinglabel)
					input#email(is='core-input')
				paper-input-decorator.custom.subject(label='Predmet', floatinglabel)
					input#subject(is='core-input')
				paper-input-decorator.custom.message(label='Správa', floatinglabel)
					paper-autogrow-textarea
						textarea#message
				div(horizontal center-justified layout)
					paper-button#send(raised) Odošli správu
